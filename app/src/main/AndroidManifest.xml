<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.morrisonspls.sysdevns.flickrgallery">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="uk.co.morrisonspls.sysdevns.flickrgallery.app.FlickrGalleryApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".modules.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.detail.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName=".modules.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.morrisonspls.sysdevns.flickrgallery.modules.main.MainActivity" />
        </activity>
    </application>

</manifest>